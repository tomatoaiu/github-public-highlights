{
  "name": "github-public-highlights",
  "description": "Highlight public repos on GitHub",
  "version": "0.1",
  "manifest_version": 3,
  "action": {},
  "permissions": [],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "https://github.com/*/*"
      ],
      "run_at": "document_idle"
    }
  ]
}
